@model Dictionary<int, int>
@{
    ViewBag.Title = "Viewcart";
}

<h2>Cart</h2>

@if (ViewBag.total1 == 0)
{
    <br />
    <h1>Cart is empty!!!</h1>
    <br />
}
<h1>@ViewBag.ans</h1>



@foreach (var item in Model)
{
    <dl class="row">
        <dt class="col-sm-2">
            Product ID:
        </dt>
        <dd class="col-sm-10">
            @item.Key
        </dd>

        <dt class="col-sm-2">
            Quantity:
        </dt>
        <dd class="col-sm-10">
            @item.Value
        </dd>

    </dl>


    @Html.ActionLink(linkText: "Delete",
    actionName: "Removecart",
    controllerName: "Checkout",
    routeValues: new
    {
        pid = item.Key,
        qnt = item.Value
    },
    htmlAttributes: null)
    <br />
    <br />

}

@using (Html.BeginForm("Makebill", "Checkout", FormMethod.Get))
{
    <div class="form-group">
        
        <input id="custname" name="custname" type="text" placeholder="Customer Name" class="form-control" required />

    </div>
    <br />
    <h3>Total:@ViewBag.total1</h3>
    <div class="row">
        <div class="col-md-4">

            <button style="margin-top:25px" type="submit" class="btn btn-primary">Make bill</button>
        </div>

    </div>
    <!--<input id="pid" name="pid" type="text" placeholder="Product ID" />
    <button type="submit" class="btn btn-default">Get details</button>-->
}


